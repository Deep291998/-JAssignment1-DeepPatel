<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    />
    <title>Recipe Management System</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarTogglerDemo01"
          aria-controls="navbarTogglerDemo01"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <a class="navbar-brand" href="/">MarketMan</a>
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link active" href="/recipes">Recipes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/add-recipe">Add Recipe</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <main class="container p-4">
      <div class="d-flex align-items-center gap-4">
        <h1 class="page-title">Recipe</h1>
        <a href="/add-recipe" class="btn btn-success my-3">Add Recipe</a>
      </div>
      <div class="row">
        <% for(var i=0; i < recipeList.length; i++) { %>
        <div class="col-sm-12 col-md-6 col-lg-4">
          <div class="card mt-4">
            <div class="card-body">
              <h5 class="card-title"><%= recipeList[i].name %></h5>
              <p class="card-text"><%= recipeList[i].description %></p>
              <p class="card-text">
                Takes Time: <%= recipeList[i].takesTime %> Minutes
              </p>
              <div class="d-flex align-items-center">
                <% if (recipeList[i].isFavorite) { %>
                    <form action="/remove-favorite" method="post">
                        <input
                          type="hidden"
                          name="recipeId"
                          value="<%= recipeList[i]._id %>"
                        />
                        <button class="btn btn-link text-warning fw-bold">
                          Remove Favorite
                        </button>
                      </form>
                <% } else { %>
                    <form action="/mark-favorite" method="post">
                        <input
                          type="hidden"
                          name="recipeId"
                          value="<%= recipeList[i]._id %>"
                        />
                        <button class="btn btn-link text-primary fw-bold">
                          Mark Favorite
                        </button>
                      </form>
                <% } %>                
                  <form action="/delete-recipe" method="post">
                    <input
                      type="hidden"
                      name="recipeId"
                      value="<%= recipeList[i]._id %>"
                    />
                    <button class="btn text-danger btn-link fw-bold">
                      Delete
                    </button>
                  </form>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
